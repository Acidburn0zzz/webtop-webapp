<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
	
	<welcome-file-list>
		<welcome-file>start</welcome-file>
	</welcome-file-list>
	
	<listener>
		<description>ShiroEnvironmentListener</description>
        <listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
    </listener>
	<listener>
		<description>WebTopContextListener</description>
		<listener-class>com.sonicle.webtop.core.app.ContextListener</listener-class>
	</listener>
	<!--
	<listener>
		<description>WebTopSessionListener</description>
		<listener-class>com.sonicle.webtop.core.app.SessionListener</listener-class>
	</listener>
	-->

	<filter>
		<filter-name>ShiroFilter</filter-name>
		<filter-class>org.apache.shiro.web.servlet.ShiroFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ShiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
		<dispatcher>ERROR</dispatcher>
	</filter-mapping>
	
	<!--
	<filter>
        <filter-name>RestApiFilter</filter-name>
        <filter-class>com.sonicle.webtop.core.app.ApiFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestApiFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
	-->
	
	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.Login</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.Logout</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Otp</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.Otp</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Otp</servlet-name>
		<url-pattern>/otp</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Start</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.Start</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Start</servlet-name>
		<url-pattern>/start</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SessionKeepAlive</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.SessionKeepAlive</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>SessionKeepAlive</servlet-name>
		<url-pattern>/keep-alive</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ResourceRequest</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.ResourceRequest</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResourceRequest</servlet-name>
		<url-pattern>/resources/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ServiceRequest</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.ServiceRequest</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ServiceRequest</servlet-name>
		<url-pattern>/service-request</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServiceRequest</servlet-name>
		<url-pattern>/ServiceRequest</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PublicServiceRequest</servlet-name>
		<servlet-class>com.sonicle.webtop.core.servlet.PublicServiceRequest</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>PublicServiceRequest</servlet-name>
		<url-pattern>/public/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>RestApiServlet</servlet-name>
		<!--<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>-->
		<servlet-class>com.sonicle.webtop.core.servlet.RestApiServlet</servlet-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.sonicle.webtop.core.app.RestApiJaxRsApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>RestApiServlet</servlet-name>
		<url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
